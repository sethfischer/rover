root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[*.{cff,svg,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.py]
max_line_length = 88

[*.svg]
max_line_length = 120

[*.kicad_mod]
indent_style = tab

[Makefile]
indent_style = tab
